@model HydroServerTools.Models.ConnectionParametersUser

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        <h4>Link User Name to Connection</h4>
        Please select:
        @*@Html.LabelFor(register => register.Role)*@
       
        User: @Html.DropDownList("UserName", (SelectList)ViewBag.Users) is <u>linked to</u> 
       Connection: @Html.DropDownList("ConnectionParameters", (SelectList)ViewBag.ConnectionParameters) 
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
