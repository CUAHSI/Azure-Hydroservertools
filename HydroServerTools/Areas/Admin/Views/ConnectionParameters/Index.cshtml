@model IEnumerable<HydroServerTools.Models.ConnectionParameters>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataSource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InitialCatalog)
        </th>
