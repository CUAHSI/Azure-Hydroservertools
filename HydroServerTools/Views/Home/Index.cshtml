@model HydroserverToolsBusinessObjects.Models.DatabaseTableValueCountModel
@{
    ViewBag.Title = "Home Page";
    
    ViewBag.Message = TempData["message"];



}

<div class="container">
    

    <div class="col-lg-6 ">

        <div class="well">

            <h4>Click to Upload:&nbsp; @TempData["message"]</h4>

            @*<button class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#setConnection">Set Database Connection</button>*@
            @*<p><a href="/CSVUpload/Sites" class="btn btn-primary btn-lg active" role="button">Import Data into Hydroserver</a></p>*@
            @Html.ActionLink("Full CSV File Upload", "UploadData", "CSVUpload", new { id = "Sites" }, new { @class = "btn btn-primary btn active" })
            @*<p></p>*@
            <span style="margin-left: 0.5em;"></span>
            @*@Html.ActionLink("Basic CSV File Import", "RevisedUploadData", "CSVUpload", new { id = "DragAndDropFiles" }, new { @class = "btn btn-primary" })*@
            @Html.ActionLink("Basic CSV File Upload", "RevisedUploadData", "CSVUpload", new { id = "SelectUploadType" }, new { @class = "btn btn-primary" })
        </div>
        <div class="well">
            <h4>Click to update the time series catalog. Required after uploading datavalues</h4>
            @Html.ActionLink("Refresh All Timeseries metadata", "RecreateSeriescatalog", "Home", new { @class = "btn btn-info active" })

        </div>

    </div>

    <div class="panel panel-default  col-lg-4 col-lg-offset-2">
        <div class="panel-heading">
            <h3 class="panel-title">Number of values by table</h3>
        </div>
        <div class="panel-body">
            <div class="">
                <ul class="list-group">
                    <li class="list-group-item">
                        <span class="badge">@Model.SiteCount</span>Sites
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.VariablesCount</span>Variables
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.OffsetTypesCount</span>Offset Types
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.SourcesCount</span>Sources
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.MethodsCount</span>Methods
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.LabMethodsCount</span>Lab Methods
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.SamplesCount</span>Samples
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.QualifiersCount</span>Qualifiers
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.QualityControlLevelsCount</span>Quality Control Levels
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.DataValuesCount</span>Data Values
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.GroupDescriptionsCount</span>Group Description
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.GroupsCount</span>Groups
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.DerivedFromCount</span>Derived From
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.CategoriesCount</span>Categories
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@Model.SeriesCatalog</span>Timeseries
                    </li>

                </ul>
            </div>
        </div>
    </div>

</div>

       
       
   
</div>
   