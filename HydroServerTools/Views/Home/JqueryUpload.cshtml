@{
  Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>File Upload MVC 4</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/JqueryUpload/jquery.ui.widget.js"></script>
    <link href="~/Scripts/JqueryUpload/jquery.fileupload.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/JqueryUpload/jquery.fileupload.js"></script>
   
</head>
<body>
    <form action="/Home/UploadFiles" enctype="multipart/form-data">
        <div class="row fileupload-buttonbar">
            <div class="span7">
                <div class="well">
                    <i class="icon-plus"></i><span>&nbsp;&nbsp;Add files...</span>
                    <input type="file" id="fileupload" name="fileupload" accept="text/*" @* multiple="multiple"*@>
                    <button id="btnUploadAll" class="btn btn-success pull-right" type="button">
                        Upload All
                    </button>
                    <div class="clearfix">
                    </div>
                    <div class="progress">
                        <div class="bar" id="overallbar" style="width: 0%">
                        </div>
                    </div>
                </div>
            </div>
            <div class="span7">
                <div class="well hide" id="filelistholder">
                </div>
            </div>
            <div class="span7">
            </div>
        </div>
    </form>
</body>
</html>
