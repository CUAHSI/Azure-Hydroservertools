}
else
{
    <div><h2>No Data available</h2></div>

}

@section scripts
{
    <script src="~/Scripts/DataTables-1.9.4/media/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTables-1.9.4/extras/TableTools/media/js/TableTools.min.js"></script>
    <script src="~/Scripts/custom/ViewDataHelper.js"></script>
    <script>
        $(document).ready(function () {
            $('#myDataTable').dataTable({
                "bServerSide": true,
                "sAjaxSource": "SamplesSearch",
                "bProcessing": true,
                "sServerMethod": "POST",
                "sPaginationType": "full_numbers",
                "sScrollX": "100%",
                "sScrollXInner": "100%",
                "bScrollCollapse": true,
                "aoColumnDefs":
                 [
                    { "aTargets": [0], "sName": "SampleID" },
                    { "aTargets": [1], "sName": "SampleType" },
                    { "aTargets": [2], "sName": "LabSampleCode" },
                    { "aTargets": [3], "sName": "LabMethodName" }
                 ]
            });
        });


    </script>
}