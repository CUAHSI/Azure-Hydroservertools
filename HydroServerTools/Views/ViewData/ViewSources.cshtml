@section scripts
{
    <script src="~/Scripts/DataTables-1.9.4/media/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTables-1.9.4/extras/TableTools/media/js/TableTools.min.js"></script>
    <script src="~/Scripts/custom/ViewDataHelper.js"></script>
    <script>
        $(document).ready(function () {
            $('#myDataTable').dataTable({
                "bServerSide": true,
                "sAjaxSource": "SourcesSearch",
                "bProcessing": true,
                "sServerMethod": "POST",
                "sPaginationType": "full_numbers",
                "sScrollX": "100%",
                "sScrollXInner": "200%",
                "bScrollCollapse": true,
                "aoColumnDefs":
                 [
                    { "aTargets": [0], "sName": "SourceID"},
                    { "aTargets": [1], "sName": "Organization", "sWidth": "200px" },
                    { "aTargets": [2], "sName": "SourceDescription", "sWidth": "200px" },
                    { "aTargets": [3], "sName": "SourceLink" },
                    { "aTargets": [4], "sName": "ContactName" },
                    { "aTargets": [5], "sName": "Phone" },
                    { "aTargets": [6], "sName": "Email" },
                    { "aTargets": [7], "sName": "Address" },
                    { "aTargets": [8], "sName": "City" },
                    { "aTargets": [9], "sName": "State" },
                    { "aTargets": [10], "sName": "ZipCode" },
                    { "aTargets": [11], "sName": "Citation", "sWidth": "200px" },
                    { "aTargets": [12], "sName": "TopicCategory" },
                    { "aTargets": [13], "sName": "Title" },
                    { "aTargets": [14], "sName": "Abstract", "sWidth": "200px" },
                    { "aTargets": [15], "sName": "ProfileVersion" },
                    { "aTargets": [16], "sName": "MetadataLink" }
                 ]
            });
        });


    </script>
}