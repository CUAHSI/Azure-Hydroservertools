    <script>
    $(document).ready(function () {
        $('#myDataTable').dataTable({
            "bServerSide": true,
            "sAjaxSource": "Search",
            "bProcessing": true,
            "sServerMethod": "POST",
            "sPaginationType": "full_numbers",
            "sScrollX": "100%",
            "sScrollXInner": "150%",
            "bScrollCollapse": true,
            "aoColumnDefs":
