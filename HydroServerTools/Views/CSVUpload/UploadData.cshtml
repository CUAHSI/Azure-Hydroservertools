@Html.Action("_Breadcrumb", "CSVUpload", new { id = ViewBag.Name })
<div class="container">
    <form id="uploadForm" action="/api/upload" method="POST" enctype="multipart/form-data">

        <div class="panel panel-default">

            <div class="panel-heading">
                <h3 class="panel-title">Currently importing: @ViewBag.Name</h3>
            </div>
            <div class="panel-body h4">
                <i class="icon-plus"></i><p>Please select or drag-in your file (.csv/.zip)</p>
                <h4>If your .csv file is larger than 5MB please zip the file before uploading. The application can process up to 750.000 records in one upload.</h4>
                @*<input type="file" id="fileupload" name="fileupload" accept=".csv,.zip" >*@
                <p>
                    <span class="btn btn-success fileinput-button active ">
                        <i class="glyphicon glyphicon-plus"></i>
                        <span>Add file...</span>
                        <input type="file" id="fileupload" class="required" name="fileupload" accept=".csv,.zip">
                    </span>
                    @*<button id="btnUploadAll" class="btn btn-success pull-right"  type="button">
                         Upload All
                        </button>*@
                    <button type="button" id="startupload" class="btn btn-primary start active ">
                        <i class="glyphicon glyphicon-upload"></i>
                        <span>Start upload</span>
                    </button>
                    <button type="reset" id="reset" class="btn btn-warning cancel active disabled">
                        <i class="glyphicon glyphicon-ban-circle"></i>
                        <span>Cancel</span>
                    </button>
                    <div class="clearfix">
                    </div>
                    <p>
                        <div class="well-sm hide h3" id="filelistholder">

                            @*<div id="progressbar"></div>*@
                        </div>
                    </p>
                    
                    @*<div class="progress">
                         <div class="bar" id="overallbar" style="width: 0%">
                         </div>
                        </div>*@
               
                </p>
            </div>
            <div class="well-sm alert-info hide h4" id="loading">
            
                <div id="monitor">
                    Upload started.
                    @*<img src="~/Images/ajax-loader.gif" />*@
                </div>
                
</div>
        </div>
        @*<p>
            <label for="file">Choose file</label>
            <input type="file" id="file" name="file" accept="*" />
        </p>
        <p><button id="upload">Upload</button></p>
        <p><span id="progress" class="progress">0%</span></p>*@

    </form>
   
</div>

  
