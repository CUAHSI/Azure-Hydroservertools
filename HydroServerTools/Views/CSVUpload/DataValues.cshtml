@model HydroserverToolsBusinessObjects.Models.DataValuesModel

@{
    ViewBag.Title = "DataValues";
    ViewBag.Name = "datavalues";
}
@section styles
{
    <link href="~/Content/DataTables-1.9.4/media/css/demo_page.css" rel="stylesheet" />
    <link href="~/Content/DataTables-1.9.4/media/css/demo_table.css" rel="stylesheet" />
    <link href="~/Content/DataTables-1.9.4/media/css/demo_table_jui.css" rel="stylesheet" />
    <link href="~/Content/DataTables-1.9.4/extras/TableTools/media/css/TableTools_JUI.css" rel="stylesheet" />
    <link href="~/Content/themes/base/minified/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/ViewData.css" rel="stylesheet" />
}
@Html.Action("_Breadcrumb", "CSVUpload", new { id = ViewBag.Name })

<div class="container" id="tabs">

    @{Html.RenderPartial("_UploadTabs");}
    
    <div id="tabs-0">
        @{ Html.RenderPartial("_UploadDataBaseTable", Model, new ViewDataDictionary { { "index", 0 }, { "viewName", ViewBag.Name } });}
    </div>
    <div id="tabs-1">
        @{ Html.RenderPartial("_UploadDataBaseTable", Model, new ViewDataDictionary { { "index", 1 }, { "viewName", ViewBag.Name } });}
    </div>
    <div id="tabs-2">

        @{ Html.RenderPartial("_UploadDataBaseTable", Model, new ViewDataDictionary { { "index", 2 }, { "viewName", ViewBag.Name } });}
    </div>
    <div id="tabs-3">
        @{ Html.RenderPartial("_UploadDataBaseTable", Model, new ViewDataDictionary { { "index", 3 }, { "viewName", ViewBag.Name } });}
    </div>

    <div class="well-sm alert-info hide" id="loading">
        <div id="monitor">
            Committing records...
            @*<img src="~/Images/ajax-loader.gif" />*@
        </div>

    </div>
</div>


@*@Html.Action("_Pager", "CSVUpload", new { name = ViewBag.Name })*@


@section scripts
{
    <script>
        $(document).ready(function () {
            initCommitAndCancelButton('@ViewBag.Name');
            oTable = $('#0').dataTable(getDatatableOptions('@ViewBag.Name', 0));
            toggleCommitButtons(oTable,0);
        });
    </script>

    @*    <script type='text/javascript' src="http://datatables.net/release-datatables/media/js/jquery.dataTables.js"></script>*@
    <script src="~/Scripts/DataTables-1.9.4/media/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/custom/CSVUploadHelper.js"></script>
}