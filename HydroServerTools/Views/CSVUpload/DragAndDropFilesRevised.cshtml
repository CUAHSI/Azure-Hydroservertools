                        }
                    }

                    //Request file validation...
                    //requestFileValidation(currentUploadId, fileName, workerMonitorValidation, dataToggle, badge, progressWrapper, progressBar, collapse);
                    requestFileValidation(currentUploadId, fileName, workerMonitorValidation, dataToggle, progressWrapper, progressBar, collapse);
                }
            },
