</head>
<body>
    <div class="container">
        <div class="row">
            <img src="~/Images/Hydroserver/HydroserverLogo.png" class="center img-thumbnail" style="border:0px; vertical-align:top"/>
        </div>
    </div>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
        </div>
            <div class="navbar-collapse collapse ">
                @if (User.Identity.IsAuthenticated)
                {
                   
                        <ul class="nav  navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                            @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                            <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Manage", "Manage", "Home", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("Controlled Vocabularies", "ControlledVocabularies", "Home", new { area = "" }, null)</li>
                        </ul>
                            if (User.Identity.IsAuthenticated)
                            {
                            @Html.Partial("_LoginPartial")

                            @Html.ActionLink("Sign-out", "SignOut", "Account", new { @class = "btn btn-info", @id = "logout" })

                            }
                            }
</div>
        </div>
    </div>
  
    <div class="container body-content">
      
          @RenderBody()
      
    </div>
    <div class="container">
        <footer>
            <hr />
            <p><a href="https://github.com/CUAHSI/Azure-Hydroservertools/issues" class="h5" target="_blank">Report a bug here!</a><span style="float:right"> &copy; @DateTime.Now.Year - &copy; CUAHSI Version 1.2.5</span></p>

        </footer>
    </div>
   @* @Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@

  
    @RenderSection("scripts", required: false)
  
</body>
</html> 
